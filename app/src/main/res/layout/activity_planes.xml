<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Planes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:id="@+id/inf3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Imagen del plan" />

                <TextView
                    android:id="@+id/inf1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del plan" />

                <TextView
                    android:id="@+id/inf2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cantidad de tiempo" />

                <TextView
                    android:id="@+id/infPay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Costo plan" />

                <TextView
                    android:id="@+id/inf4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripcion" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="30dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:id="@+id/info_text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Â¡Prueba el Dia Gratis!"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Con el dia gratis podras tener accseo a todas las funciones y dietas especialmente hechas para ti" />

                <TextView
                    android:id="@+id/info_text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lo unico que debes hacer es dar cick aqui y registrarte" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.widget.RelativeLayout>