<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_mujer"
    android:backgroundTintMode="add"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtMainWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="660dp"
        android:shadowColor="@color/cardview_dark_background"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="Bienvenido Carlos"
        android:textColor="@color/cardview_light_background"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/btnMainRutinasCasa"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/buton_primary"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Cerrar sesiÃ³n" />

    <Button
        android:id="@+id/btnMainDieta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btnMainRutinasCasa"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/buton_primary"
        android:text="@string/title_module_dieta" />

    <Button
        android:id="@+id/btnMainRutinasCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnLogout"
        android:layout_centerVertical="false"
        android:layout_marginBottom="90dp"
        android:layout_toEndOf="@+id/btnMainDieta"
        android:background="@drawable/buton_primary"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/title_module_rutinas_casa" />

    <Button
        android:id="@+id/btnMainRutinasGym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btnMainDieta"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/btnMainDieta"
        android:background="@drawable/buton_primary"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/title_module_rutinas_gym" />

</android.widget.RelativeLayout>