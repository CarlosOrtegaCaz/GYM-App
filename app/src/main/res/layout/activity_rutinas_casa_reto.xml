<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RutinasCasaReto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardRutinasCasa0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgCasaRetoHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        app:srcCompat="@drawable/header_casa_1" />

                    <TextView
                        android:id="@+id/txtTitleCard"
                        style="@style/card_text_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="0dp"
                        android:text="Rutinas en Casa" />

                    <TextView
                        android:id="@+id/txtDescCard"
                        style="@style/card_text_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtTitleCard"
                        android:layout_gravity="top"
                        android:layout_marginTop="0dp"
                        android:text="Selecciona un reto a tu gusto"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:visibility="gone" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardRutinasCasa1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/saltos_tijera_1" />

                    <TextView
                        android:id="@+id/textView47"
                        style="@style/card_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:gravity="right"
                        android:text="Saltos Jack"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView45"
                        style="@style/card_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView47"
                        android:layout_alignParentRight="true"
                        android:text="20s"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardRutinasCasa2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView030"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/sentadilla_1" />

                    <TextView
                        android:id="@+id/textView050"
                        style="@style/card_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:text="Sentadillas"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView051"
                        style="@style/card_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView050"
                        android:layout_alignParentRight="true"
                        android:text="30s"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardRutinasCasa3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView040"
                        android:layout_width="wrap_content"
                        android:layout_height="85dp"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/plancha_pierna_1" />

                    <TextView
                        android:id="@+id/textView060"
                        style="@style/card_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:text="Elevaciones de pierna"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView061"
                        style="@style/card_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView060"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="30dp"
                        android:text="30s"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardRutinasCasa4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView050"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/rutinas_casa_lagartija_hombre_2" />

                    <TextView
                        android:id="@+id/textView070"
                        style="@style/card_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:text="Flexiones de brazo"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView071"
                        style="@style/card_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView070"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="30dp"
                        android:text="20s"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cardRutinasCasa5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView060"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/postura_cobra_1" />

                    <TextView
                        android:id="@+id/textView080"
                        style="@style/card_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:text="Postura de la  cobra"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView081"
                        style="@style/card_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView080"
                        android:layout_alignParentRight="true"
                        android:text="30s"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/button7"
                style="@style/boton_regresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menú Principal" />


        </LinearLayout>
    </ScrollView>

</android.widget.RelativeLayout>