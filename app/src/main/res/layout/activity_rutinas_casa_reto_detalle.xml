<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RutinasCasaRetoDetalle">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgCasaRetoHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/header_casa_1" />

            <TextView
                android:id="@+id/txtTitleCard"
                style="@style/card_text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:text="Rutinas en Casa"
                tools:text="Nombre ejercicio" />

            <TextView
                android:id="@+id/textView46"
                style="@style/card_text_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instrucciones"
                android:textSize="20sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtDescCard"
                style="@style/card_text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="0dp"
                android:text="Selecciona un reto a tu gusto"
                android:textSize="18sp"
                android:textStyle="normal"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</android.widget.RelativeLayout>